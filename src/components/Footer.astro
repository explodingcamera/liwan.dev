---
import { Image } from "astro:assets";
import EditLink from "@astrojs/starlight/components/EditLink.astro";
import type _Footer from "@astrojs/starlight/components/Footer.astro";
import LastUpdated from "@astrojs/starlight/components/LastUpdated.astro";
import Pagination from "@astrojs/starlight/components/Pagination.astro";

type Props = Parameters<typeof _Footer>[0];

const { entry } = Astro.locals.starlightRoute;
---

<footer class="sl-flex">
  <div class="meta sl-flex">
    <EditLink {...Astro.props} />
    <LastUpdated {...Astro.props} />
  </div>
  <Pagination {...Astro.props} />

  <div class="imprint sl-flex">
    {(entry.data.template !== "doc") && (
      <h2>
        <Image src="/favicon.svg" alt="Liwan Logo" width="20" height="20" />
        Liwan - Lightweight Analytics</h2>
      <a target="_blank" href="mailto:hi@liwan.dev">
        hi@liwan.dev
      </a>
    )}
    <div>
      <a
      target="_blank"
      href="https://henrygressmann.de/impressum"
      >
        imprint</a> /
      <a
      target="_blank"
      href="https://henrygressmann.de/privacy"
      >
        privacy policy
      </a>
    </div>
  {(entry.data.template !== "doc") && (
    <a
      target="_blank"
      href="https://henrygressmann.de"
    >
      created by Henry Gressmann
    </a>
  )}
  </div>
</footer>

<style>
  footer {
    flex-direction: column;
    gap: 1.5rem;
  }
  .meta {
    gap: 0.75rem 3rem;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 3rem;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-gray-3);
  }
  .meta > :global(p:only-child) {
    margin-inline-start: auto;
  }

  .imprint {
    display: flex;
    flex-direction: column;
    gap: 0.1em;

    h2{
      display: flex;
      align-items: center;
      gap: 0.3em;
    }

    a {
      font-size: 1re.5m;
      color: var(--sl-color-gray-3);
      &:hover {
        color: var(--sl-color-white);
      }
    }
  }
  .imprint :global(svg) {
    color: var(--sl-color-orange);
  }
  .kudos:hover {
    color: var(--sl-color-white);
  }
</style>
